<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<% include ./partials/head %>

<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Stylesheets
  ============================================= -->

    <link rel="stylesheet" href="/css/stylesheet.css" type="text/css" />

  <!-- External JavaScripts
  ============================================= -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/jquery-linedtextarea.js"></script>

  <!-- Document Title
  ============================================= -->
  <title>SUGAR LIST!</title>
  <script>
  (function(d, s, id){
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'Messenger'));
  </script>
  <script>

  </script>
</head>

<body>
<form id="sugarList" method="post" action="/list">
  <input id="facebook_id" type="hidden" name='fb_id'>
  <% for(var i=0; i<list.length; i++) {%>
    <input type="checkbox" name='<%= list[i] %>' value='yes'><span><%= list[i] %></span>
    <input type="hidden" name='<%= list[i] %>' value='no'>
  <% } %>
  <div class="sugar-button-done">
     <label>
        <input type="hidden" value='Done'>
        <span>Done</span>
     </label>
  </div>
</form>


<script>
window.extAsyncInit = function() {
    // the Messenger Extensions JS SDK is done loading
    MessengerExtensions.getUserID(function success(uids) {
      var psid = uids.psid;
      conosole.log(psid)
      $("#facebook_id").val("psid")
    }, function error(err) {

    });
  };

$('.sugar-button').click(function (evt) {
    $(this).toggleClass("clicked");
    evt.preventDefault();
});
$('.sugar-button-done').click(function (evt) {
    $('form').submit();
    evt.preventDefault();
    MessengerExtensions.requestCloseBrowser(function success() {

      }, function error(err) {

      });
});

</script>
</body>
